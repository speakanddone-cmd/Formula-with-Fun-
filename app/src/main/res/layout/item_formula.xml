<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="7dp"
    app:cardBackgroundColor="@color/formulaCard"
    app:strokeColor="@color/colorPrimary"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp">

        <!-- Star icon at top-right -->
        <ImageView
            android:id="@+id/imgFavorite"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_star_border_24"
            android:contentDescription="Favorite"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <!-- Speaker icon at bottom-right -->
        <ImageView
            android:id="@+id/imgSpeak"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_volume_off"
            android:contentDescription="Listen"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/speakerInactive"/>

        <!-- Formula title, padded from top and right -->
        <TextView
            android:id="@+id/tvFormulaTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="54dp"
            android:layout_marginTop="4dp"
            android:layout_toStartOf="@id/imgFavorite"
            android:text="Formula Name"/>

        <!-- Formula explanation, below title, left aligned, with extra padding to not overlap speaker -->
        <TextView
            android:id="@+id/tvFormulaExplanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFormulaTitle"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="54dp"
            android:layout_toStartOf="@id/imgSpeak"
            android:textColor="@color/textSecondary"
            android:text="Formula expression here"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
