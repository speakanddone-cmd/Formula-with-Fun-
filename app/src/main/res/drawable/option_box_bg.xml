<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected (very visible, thick bright green border) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/optionSelectedBg"/>
            <!-- Bright green and thicker for visibility -->
            <stroke android:width="5dp" android:color="#43A047"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>
    <!-- Pressed (on tap, before selection) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/optionPressedBg"/>
            <stroke android:width="3dp" android:color="#43A047"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>
    <!-- Normal (not selected) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/optionNormalBg"/>
            <stroke android:width="2dp" android:color="@color/optionNormalBorder"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>
</selector>
